<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@user, remote: true) do |f| %>
      <div class="form-group">
        <%= f.label '名前' %><br />
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label 'メールアドレス' %><br />
        <%= f.text_field :email %>
      </div>
      <%= f.submit "作成", class: "btn btn-success btn-sm" %>
    <% end %>
  </div>
</div>